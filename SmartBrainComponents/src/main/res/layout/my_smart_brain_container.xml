<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.example.smartbraincomponents.my_smart_brain.SBMySmartBrainItemHeaderView
        android:id="@+id/mySmartBrainHeaderView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:titleArrowShowType="visible"
        app:titleText="giorgi" />

    <FrameLayout
        android:id="@+id/mySmartBrainContainerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/mySmartBrainHeaderView" />

</androidx.constraintlayout.widget.ConstraintLayout>